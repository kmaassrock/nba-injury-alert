# Database
DATABASE_URL=postgresql://postgres:postgres@localhost/nba_injury_alert

# API
API_HOST=0.0.0.0
API_PORT=8000

# Fetcher
NBA_API_BASE_URL=https://stats.nba.com
INJURY_REPORT_ENDPOINT=/stats/injuries
POLL_INTERVAL_SECONDS=3600

# Notification
EMAIL_ENABLED=true
EMAIL_SMTP_SERVER=smtp.example.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USERNAME=your_username
EMAIL_SMTP_PASSWORD=your_password
EMAIL_FROM_ADDRESS=noreply@example.com

# Push Notifications
PUSH_ENABLED=false
PUSH_API_KEY=your_push_api_key

# WebSocket
WEBSOCKET_ENABLED=true

# Security
JWT_SECRET_KEY=change_this_to_a_secure_random_string
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Debug
DEBUG=true
LOG_LEVEL=INFO
